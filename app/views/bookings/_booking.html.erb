<div class="booking">
  <p><strong>Booking Code:</strong> <%= booking.booking_code %></p>
  <p><strong>Start Date:</strong> <%= booking.start_date.strftime('%A, %B %e, %Y %l:%M %p') %></p>
  <p><strong>Start Date:</strong> <%= booking.end_date.strftime('%A, %B %e, %Y %l:%M %p') %></p>
  <p><strong>Room Price:</strong> <%= number_to_currency(booking.room_price) %></p>

  <%= link_to "Edit Booking", edit_booking_path(booking) %> --
  <%= link_to "Delete Booking", booking, data:{ turbo_method: :delete, turbo_confirm: "Are you sure?"}%>--
  <%= link_to "Back to Room #{@room.hotel.name}", @room.hotel %>
</div>